// class
public type Point {
    public x: i32;
    public y: i32;

    public constructor(x: i32, y: i32) {
        this.x = x;
        this.y = y;
    }

    public distance(other: Point): f64 {
        return sqrt((this.x - other.x) * (this.x - other.x) + (this.y - other.y) * (this.y - other.y));
    }
}

